{% extends 'base.html.twig' %}

{% block title %}{{ continent.name }}{% endblock %}

{% block body %}
<div class="ui segment">
    <h1 class="ui header">
        <i class="globe icon"></i>
        <div class="content">{{ continent.name }}</div>
    </h1>

    <div class="ui list">
        <div class="item">
            <i class="globe icon"></i>
            <div class="content">
                <strong>Nom :</strong> {{ continent.name }}
            </div>
        </div>
    </div>

    <a href="{{ path('app_continent_index') }}" class="ui button">
        <i class="arrow left icon"></i> Retour Ã  la liste
    </a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_continent_edit', {'id': continent.id}) }}" class="ui yellow button">
            <i class="edit icon"></i> Modifier
        </a>
        {{ include('continent/_delete_form.html.twig') }}
    {% endif %}
</div>
{% endblock %}
