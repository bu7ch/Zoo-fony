{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class="ui middle aligned center aligned grid" style="min-height: 100vh;">
    <div class="column" style="max-width: 450px;">
        <h2 class="ui teal header">
            <div class="content">Connexion Ã  votre compte</div>
        </h2>

        {% if error %}
            <div class="ui negative message">
                <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
            </div>
        {% endif %}

        <form class="ui large form" method="post" action="{{ path('app_login') }}">
            <div class="ui stacked segment">
                <div class="field">
                    <label for="inputEmail">Email</label>
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input type="email" id="inputEmail" name="_username" value="{{ last_username }}" required autofocus placeholder="Email">
                    </div>
                </div>
                <div class="field">
                    <label for="inputPassword">Mot de passe</label>
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input type="password" id="inputPassword" name="_password" required placeholder="Password">
                    </div>
                </div>
                <button class="ui fluid large teal submit button">Connexion</button>
            </div>
        </form>

        <div class="ui message">
            Vous n'avez pas de compte ? <a href="{{ path('app_register') }}">Inscription</a>
        </div>
    </div>
</div>
{% endblock %}
